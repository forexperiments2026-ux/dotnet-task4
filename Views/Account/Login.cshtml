@model Task4.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    ViewData["AuthLayout"] = true;
    var statusError = TempData["StatusError"] as string;
    var statusSuccess = TempData["StatusSuccess"] as string;
}

<section class="login-screen">
    <div class="login-layout shadow-sm">
        <div class="login-panel">
            <div class="login-content">
                <div class="login-brand">THE APP</div>
                <div class="login-surface">
                    <p class="login-kicker mb-1">Secure workspace access</p>
                    <h1 class="login-title">Sign In to Your Dashboard</h1>
                    <p class="login-subtitle">Use your credentials to manage users and operations.</p>

                    @if (!string.IsNullOrWhiteSpace(statusError))
                    {
                        <div class="alert alert-danger" role="status">@statusError</div>
                    }
                    @if (!string.IsNullOrWhiteSpace(statusSuccess))
                    {
                        <div class="alert alert-success" role="status">@statusSuccess</div>
                    }

                    <form method="post" asp-controller="Account" asp-action="Login" novalidate>
                        @Html.AntiForgeryToken()
                        <input asp-for="ReturnUrl" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="mb-3">
                            <label class="form-label" asp-for="Email">E-mail</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text text-secondary"><i class="bi bi-envelope-fill" aria-hidden="true"></i></span>
                                <input asp-for="Email" class="form-control" type="email" placeholder="name@company.com" autocomplete="username" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" asp-for="Password"></label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text text-secondary"><i class="bi bi-lock-fill" aria-hidden="true"></i></span>
                                <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" autocomplete="current-password" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="form-check mb-4">
                            <input class="form-check-input" asp-for="RememberMe" />
                            <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                        </div>
                        <button class="btn btn-primary btn-lg w-100 login-submit-btn" type="submit">Sign In</button>
                    </form>

                    <div class="d-flex justify-content-between align-items-center mt-4 small">
                        <span class="text-secondary">Don't have an account?</span>
                        <a asp-controller="Account" asp-action="Register">Create one</a>
                    </div>
                </div>
            </div>
        </div>
        <aside class="login-art" aria-hidden="true"></aside>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
