@model Task4.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    var statusError = TempData["StatusError"] as string;
    var statusSuccess = TempData["StatusSuccess"] as string;
}

<section class="auth-page mx-auto" style="max-width: 480px;">
    <div class="card shadow-sm">
        <div class="card-body p-4 p-md-5">
            <h1 class="h4 mb-3 text-center">Sign in</h1>
            <p class="text-center text-secondary mb-4">Доступ к панели управления пользователями</p>

            @if (!string.IsNullOrWhiteSpace(statusError))
            {
                <div class="alert alert-danger" role="status">@statusError</div>
            }
            @if (!string.IsNullOrWhiteSpace(statusSuccess))
            {
                <div class="alert alert-success" role="status">@statusSuccess</div>
            }

            <form method="post" asp-controller="Account" asp-action="Login" novalidate>
                @Html.AntiForgeryToken()
                <input asp-for="ReturnUrl" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="name@company.com" autocomplete="username" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" autocomplete="current-password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="RememberMe" />
                    <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                </div>
                <button class="btn btn-primary w-100" type="submit">Login</button>
            </form>

            <div class="d-flex align-items-center mt-4 small">
                <a asp-controller="Account" asp-action="Register">Create account</a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
